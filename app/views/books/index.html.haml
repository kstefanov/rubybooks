%h1 All Books
 
%table#books
  %thead
    %tr
      %th Book Title
      %th Genre
      %th More Info
      %th ISBN
      %th Publish Date
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.genre
        %td= link_to "More about #{book.title}", book_path(book)
        %td= book.isbn
        %td= book.publish_date
= link_to 'Add new book', new_book_path